import sys
import seal_path

import bl.lib.tools.hadut as hadut

def jar_path():
	return hadut.find_seal_jar(seal_path.SealDir)

def main():
	retcode = hadut.run_class("it.crs4.seal.read_sort.MergeAlignments", jar_path(), None, sys.argv[1:])
	if retcode != 0:
		print >>sys.stderr, "Error running MergeAlignments"

	return retcode

if __name__ == "__main__":
  sys.exit(main())
